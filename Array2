class ArraySum {
    final int[] array;
    private int sizeArray;
    private int myNumber;
    private int tens;
    
    public ArraySum(int number){
        myNumber = number;
        tens = 1;
        sizeArray = 0;
        countTen();
        array = new int[sizeArray];
        createArray();
        printArray(array);
        
    }
    
    private void printArray(int[] arrayF){
        int length = arrayF.length;
        for(int i=0;i<length;i++){
            System.out.print(arrayF[i] + " ");
            
        }
        System.out.println(" ");
    }
    
    private void countTen(){
        while (myNumber / tens > 0){
            sizeArray++;
            tens*=10;
        }
        tens/=10;
    }
    
    private void createArray(){
        for(int i=0;i<sizeArray;i++){
            array[i] = myNumber / tens;
            myNumber -= array[i]*tens;
            tens/=10;
        }
    }
    
    public ArraySum(ArraySum number1, ArraySum number2){
        int ten1 = number1.sizeArray;
        int ten2 = number2.sizeArray;
        int[] arr1 = number1.array;
        int[] arr2 = number2.array;
        int[] resArr;
        if(ten1 >= ten2){
            
                resArr = Sum(arr1,arr2,ten1,ten2);    
        }else {
            resArr = Sum(arr2,arr1,ten2,ten1);
        }
        
        if(resArr[0] == 0){
            array = new int[resArr.length - 1];
            for(int i = 0;i<array.length;i++){
                array[i]=resArr[i+1];
            }
        }else array = resArr;
        
        printArray(array);
    }
    
    private int[] Sum(int[] arr1, int[] arr2, int ten1, int ten2){
        
        int[] resArr = new int[ten1+1];
        resArr[0] = 0;
            for(int j=1;j<ten1;j++){
                int i = j-1;
                if(ten2-ten1+i<=0){
                    if(arr1[i]+arr2[i] > 10){
                        resArr[j] = arr1[i]+arr2[i]-10;
                        resArr[j-1]++;
                    }else resArr[j] = arr1[i]+arr2[i];
                }else resArr[j] = arr1[i];
            }
        return resArr;
    }
}

class ArrayForSort
{
    final int[] array;
    private int sizeArray;
    
    public ArrayForSort(int size){ //Конструктор класса, создаем и заполняем массив
        array = new int[size];
        sizeArray = size;
        for (int i = 0; i<size; i++){
            array[i] = (int)(Math.random()*100);
        }
    }
    
    private void ArrayPrint(int[] arrayPrint, int size){  //Вывод массива в консоль
        for (int i = 0; i < sizeArray; i++) {
            System.out.print(arrayPrint[i] + " ");
        }
        System.out.println(" ");
    }
    
    public void MainArrayPrint(){  //Вывод исходного массива
        ArrayPrint(array, sizeArray);
    }
    
    public void BubbleSorter(){                                 //МЕТОД ПУЗЫРЬКОВОЙ СОРТИРОВКИ
        int[] bubbleArray = array;
        ArrayPrint(bubbleArray,sizeArray);
        for (int out = sizeArray - 1; out >= 1; out--){         //Внешний цикл
            for (int in = 0; in < out; in++){                   //Внутренний цикл
                if(bubbleArray[in] > bubbleArray[in + 1]){       //Если порядок элементов нарушен
                    int temp = bubbleArray[in];
                    bubbleArray[in] = bubbleArray[in+1];
                    bubbleArray[in+1] = temp;
                }
            }
        }
        ArrayPrint(bubbleArray, sizeArray);                     //Вывод результата
    }
    
    public void SortPaste(){                                    //Сортировка методом вставки
        int[] pasteArray = array;                               //копируем исходный массив
        for(int i =0; i<sizeArray;i++){
            int element = pasteArray[i];
            int j = i;
            while (j>0 && pasteArray[j-1] >element){
                pasteArray[j] = pasteArray[j-1];
                j--;
            }
            pasteArray[j] = element;
        }
        ArrayPrint(pasteArray, sizeArray);
    }
}

